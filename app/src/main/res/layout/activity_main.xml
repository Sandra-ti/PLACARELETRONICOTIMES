<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time A"
            android:padding="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
                />
          <TextView
            android:id="@+id/ponto_a_visao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="56sp"
            android:gravity="center_horizontal"
              />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ 3 pontos"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="4dp"
                android:onClick="addtrespontostimeA"
                android:fontFamily="sans-serif-medium"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ 2 pontos"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="4dp"
                android:onClick="adddoispontostimeA"
                android:fontFamily="sans-serif-medium"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Ponto Livre"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="4dp"
                android:onClick="addumpontotimeA"
                android:fontFamily="sans-serif-medium"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Um Ponto "
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="4dp"
                android:onClick="menosumpontotimeA"
                android:fontFamily="sans-serif-medium"
                />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:outlineAmbientShadowColor="@color/colorPrimaryDark"/>



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time B"
                android:padding="16dp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/ponto_b_visao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="56sp"
                android:gravity="center_horizontal"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ 3 pontos"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="4dp"
                android:onClick="addtrespontostimeB"
                android:fontFamily="sans-serif-medium"


                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ 2 pontos"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="4dp"
                android:onClick="adddoispontostimeB"
                android:fontFamily="sans-serif-medium"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Ponto Livre"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="4dp"
                android:onClick="addumpontotimeB"
                android:fontFamily="sans-serif-medium"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Um Ponto "
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="4dp"
                android:onClick="menosumpontotimeB"
                android:fontFamily="sans-serif-medium"

                />
        </LinearLayout>

    </LinearLayout>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reset"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:onClick="resetpontos"
    android:fontFamily="sans-serif-medium"
/>
</RelativeLayout>